<div class="row">
  <div class="columns">
    <% if @infos_data.class == Hash && @infos_data.count == 2 %>
      <div id="container" style="width:100%; height:400px;"></div>
      <%= render "data/multi_countries" %>
      <% unless @no_info.empty? %>
      <p>There are no information on the following countries: <%= @no_info.join(", ") %></p>
      <% end %>
    <% elsif @infos_data.count == 1 %>
      <div id="container1" style="width:100%; height:400px;"></div>
      <%= render "data/one_dataset" %>
    <% elsif @infos_data.count == 2 %>
      <div id="container2" style="width:100%; height:400px;"></div>
      <%= render "data/two_datasets" %>
      <% elsif @infos_data.count == 3 %>
      <div id="container3" style="width:100%; height:400px;"></div>
      <%= render "data/three_datasets" %>
    <% end %>
    <div class="container">
      <% @description.each do |descrip| %>
      <div class="large-4 medium-6 small-12 columns">
        <div class ="green-container">
          <h4><%=
           descrip["title"] %></h4>
          <p><%= descrip["description"] %></p>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
